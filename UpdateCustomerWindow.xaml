<Window x:Class="TailorShop.UpdateCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تعديل بيانات العميل" Height="700" Width="350" FlowDirection="RightToLeft" Background="#E0F7FA">
    <StackPanel Margin="10">
        <Label Content="الاسم:"/>
        <TextBox x:Name="txtName" Tag="الاسم"/>
        <Label Content="الطول:"/>
        <TextBox x:Name="txtLength" Tag="الطول"/>
        <Label Content="الكم:"/>
        <TextBox x:Name="txtSleeve" Tag="الكم"/>
        <Label Content="الكتف:"/>
        <TextBox x:Name="txtShoulder" Tag="الكتف"/>
        <Label Content="الوسع:"/>
        <TextBox x:Name="txtWidth" Tag="الوسع"/>
        <Label Content="اللياقة:"/>
        <TextBox x:Name="txtFitness" Tag="اللياقة"/>
        <Label Content="الطوق:"/>
        <TextBox x:Name="txtCollar" Tag="الطوق"/>
        <Label Content="التطريز:"/>
        <TextBox x:Name="txtEmbroidery" Tag="التطريز"/>
        <Label Content="التليفون:"/>
        <TextBox x:Name="txtPhone" Tag="التليفون"/>
        <Label Content="ملاحظات:"/>
        <TextBox x:Name="txtNotes" Tag="ملاحظات" Height="50" AcceptsReturn="True"/>
        <Button x:Name="btnSave" Content="حفظ" Click="btnSave_Click" Width="100" Margin="0,10,0,0" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>